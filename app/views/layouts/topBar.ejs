<div class="topbar">
    <% if(accData){%>
    <div class="social">
        <b>
            </b>
    </div>
    <% }%>
    <div class="trunghieu">

        <% if(accData){%>
        <div class="dropdown">
            <a id="dropdownMenuButton" data-toggle="dropdown">
                <% var countthongbao
                        if(Number(thongbao)>0 && Number(thongbao)<9){
                             countthongbao = '0'+thongbao;
                        }else if(Number(thongbao)>99){
                            countthongbao = '99+';
                        }%>
                <% if(Number(thongbao)> 0){%>
                <span class="notify-badge" id="thongbao1">
                    <%=countthongbao%></span>
                <%}%>

                <img src="<%= accData.image%>" class="img-circle" alt="Tài Khoản" height="32" width="32" style="border-radius: 100%;border: 2px solid #6b6868;">
               <b><%= accData.displayName%> <i class="fa fa-angle-down"></i></b>
            </a>


            <input type="hidden" id="iduserNoti" class="form-control" value="<%=accData._id%>">
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton" style="margin-top: 14px;">
                    <a class="dropdown-item-test" style="
                    position: absolute;
                    top: -6px;
                    right: 10px;
                    display: inline-block !important;
                    border-right: 8px solid transparent;
                    border-bottom: 8px solid #fff;
                    border-left: 8px solid transparent;
                    content: '';">
                    </a>
                <a class="dropdown-item" href="/notification"><i class="fa fa-bell"> Thông báo</i>
                    <span class="badge badge-danger" id="thongbao2">
                        <%=thongbao%></span>
                </a>

                <a class="dropdown-item" href="/logout"><i class="fa fa-sign-out"> Đăng xuất</i></a>


            </div>
        </div>

        <%}else{%>
        <div class="btn-group">
            <button type="button" class="btn btn-sm btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true"
                aria-expanded="false">
                Đăng Nhập
            </button>
            <div class="dropdown-menu dropdown-menu-right">
                
               
                <a class="dropdown-item" href="/user/auth/google">
                    
                    <button type="button" class="btn btn-sm btn-danger"><i class="fa fa-google-plus"></i> Đăng nhập với Google</button>
                   
                    
                </a>
                <a class="dropdown-item" href="#">
                    
                    <button type="button" class="btn btn-sm btn-facebook"><i class="fa fa-facebook-f"></i>  Đăng nhập với Facebook</button>
                   
                    
                </a>
            </div>
        </div>


        <%}%>

    </div>


</div>