<header class="header">
    <div class="header-inner">
        <div class="logo-wrap">
            <a href="/" class="logo">
                <img alt="" src="/Web/images/logo.png" />
            </a>
        </div>
        <!--menu-main-->
        <nav class="menu-main hidden-sm hidden-xs">
            <ul>
                <li class="menu-item">
                    <a href="/"><i class="fa fa-home"></i> Home </a>

                </li>
                <% if(dataMenu){
                                dataMenu.forEach(a => {
                                    if(a.subLevel == 1){%>
                <li class="menu-item-has-children">
                    <a href="<%if(a.hasSub==1){%>#<%}else{%>/category/<%=a.path%><%}%>">
                        <%=a.nameTheLoai%><span></span></a>
                    <% if(a.hasSub == 1){%>
                    <ul class="sub-menu">
                        <%a.subTheLoai.forEach(b => { %>
                        <li>
                            <a href="/category/<%=b.path%>">
                                <%=b.nameTheLoai%></a>
                        </li>
                        <%})%>
                    </ul>
                    <%}%>
                </li>
                <% }
                                });
                            }%>




            </ul>
        </nav>
        <div class="header-right">
            <div class="search-box">
                <form action="/search" method="POST">
                    <input type="text" name="tukhoa" placeholder="Đang nhập..." />
                    <input type="submit" style="position: absolute; left: -9999px; width: 1px; height: 1px;" tabindex="-1" />
                </form>
                <button class="search-icon">
                    <i class="ion-ios-search-strong"></i>
                </button>
            </div>
            <div class="menu-icon hidden-lg hidden-md">
                <i class="ion-navicon"></i>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
</header>

<section class="breaking-news">
    <span class="breaking-news-caption">
        Tin Nổi Bật :
    </span>
    <div class="owl-breaking-wrap">
        <div class="owl-carousel owl-breaking">
            <% if(tinnoibat){
                        tinnoibat.forEach(a => {%>
            <div>
                <p>
                    <a href="/posts/<%= a.path%>">
                        <%= a.tieude%></a>
                </p>
            </div>
            <% });

                    }%>


        </div>
    </div>
</section>