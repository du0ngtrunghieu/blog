<% include layouts/header %>
<!-- end header -->
<!-- start page container -->
<div class="page-container">
    <!-- start sidebar menu -->
    <% include layouts/sidebar %>
    <!-- end sidebar menu -->
    <!-- start page content -->
    <div class="page-content-wrapper">
        <div class="page-content">
            <div class="page-bar">
                <div class="page-title-breadcrumb">
                    <div class=" pull-left">
                        <div class="page-title">
                            <b>
                                <%= page%></b>
                        </div>
                    </div>
                    <ol class="breadcrumb page-breadcrumb pull-right">
                        <li><i class="fa fa-home"></i>&nbsp;<a class="parent-item" href="/">Dashboard</a>&nbsp;<i class="fa fa-angle-right"></i>
                        </li>
                        <li><a class="parent-item" href="/admin/viewtypeofnew">Xem Loại Tin</a>&nbsp;<i class="fa fa-angle-right"></i>
                        </li>
                        <li class="active">
                            <%= page%>
                        </li>
                    </ol>
                </div>
            </div>

            <!-- add content here -->


            <div class="row">
                <div class="col-lg-12">
                    <div class="card card-topline-aqua">
                        <div class="card-head">
                            <header>Thêm Loại Tin</header>
                        </div>
                        <div class="card-body">

                            <form enctype="multipart/form-data" method="POST" role="form" id="addnew">
                                <div class="col-lg-12 margin-top-20">
                                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label getmdl-select getmdl-select__fix-height select-width">
                                        <input autocomplete='off' class="mdl-textfield__input" type="text" id="sample2" name="theloai"
                                            readonly tabIndex="-1">
                                        <label for="sample2" class="pull-right margin-0">
                                            <i class="mdl-icon-toggle__label material-icons">keyboard_arrow_down</i>
                                        </label>
                                        <label for="sample2" class="mdl-textfield__label"><b>Thuộc thể loại nào ?</b></label>

                                        <ul data-mdl-for="sample2" class="mdl-menu mdl-menu--bottom-left mdl-js-menu">
                                            <% if(data) {
                                               data.forEach(currentItem => { 
                                                   if(currentItem.hasSub ==0){%>
                                                <li class="mdl-menu__item" data-val="<%=currentItem._id%>">
                                                    <b>
                                                        <%=currentItem.nameTheLoai%></b>
                                                </li>
                                              <% }});
                                            }%>


                                        </ul>
                                    </div>



                                </div>
                                <div class="col-lg-12 margin-top-20">
                                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-width">
                                        <input autocomplete='off' class="mdl-textfield__input" type="text" id="text4" name="nameLoaiTin">
                                        <label class="mdl-textfield__label" for="text4"><b>Nhập tên loại tin</b></label>

                                    </div>

                                </div>



                                <div class="col-lg-12 margin-top-120">
                                    <button type="submit" class="btn btn-circle btn-info btn-lg m-b-10" id="themloaitin">
                                        <i class="fa fa-plus"></i>Thêm Loại Tin</button>
                                </div>

                            </form>

                        </div>
                    </div>
                </div>
            </div>


            <!-- add content here -->
        </div>
    </div>
    <!-- end page content -->
    <!-- start chat sidebar -->

    <!-- end chat sidebar -->
</div>
<!-- end page container -->
<!-- start footer -->
<% include layouts/footer %>
<script src="/assets/js/pageNew.js"></script>