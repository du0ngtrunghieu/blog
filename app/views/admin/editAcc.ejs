<% include layouts/header %>
<!-- end header -->
<!-- start page container -->
<div class="page-container">
     <!-- start sidebar menu -->
     <% include layouts/sidebar %>
     <!-- end sidebar menu -->
     <!-- start page content -->
     <div class="page-content-wrapper">
          <div class="page-content">
               <div class="page-bar">
                    <div class="page-title-breadcrumb">
                         <div class=" pull-left">
                              <div class="page-title">
                                   <b>
                                        <%= page%></b>
                              </div>
                         </div>
                         <ol class="breadcrumb page-breadcrumb pull-right">
                              <li><i class="fa fa-home"></i>&nbsp;<a class="parent-item" href="/">Dashboard</a>&nbsp;<i
                                        class="fa fa-angle-right"></i>
                              </li>
                              <li><a class="parent-item" href="/admin/accounts/1">Xem Tài Khoản</a>&nbsp;<i class="fa fa-angle-right"></i>
                              </li>
                              <li class="active">
                                   <%= page%>
                              </li>
                         </ol>
                    </div>
               </div>

               <!-- add content here -->

               <div class="loader loader-default" id="load"></div>
               <div class="row">
                    <div class="col-lg-12">
                         <div class="card card-topline-aqua full-wight">
                              <div class="card-head">
                                   <header>Sửa Tài Khoản</header>
                              </div>
                              <div class="card-body">

                                   
                                   <div class="container">
                                        <div class="row">
                                        
                                             <div class="col-md-12">
                                                  <form enctype="multipart/form-data" method="POST" role="form" id="editform">
                                                       <div class="col-md-12 margin-top-20">
                                                                 <div class="contact-detail">
                                                                           <i class="fa fa-envelope"></i> Địa Chỉ Email
                                                                           <span>
                                                                                <%if(data.email){%>
                                                                                     <a><%=data.email%></a>
                                                                                <%}%>
                                                                                
                                                                           </span>
                                                                      </div>
                                                       </div>
                                                       <div class="col-md-12 margin-top-20">
                                                                 <div class="contact-detail">
                                                                           <i class="fa fa-user"></i> Tên Account
                                                                           <span>
                                                                                <a><%=data.displayName%></a>
                                                                           </span>
                                                                      </div>
                                                       </div>
                                                       
                                                       <input type="hidden"  id="idaccount" class="form-control" value="<%=data.id%>">
                                                       
                                                       <div class="col-md-12 margin-top-20">
                                                                 <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label getmdl-select getmdl-select__fix-height select-width">
                                                                     <input autocomplete='off' class="mdl-textfield__input" type="text" id="sample2" name="role"
                                                                         readonly tabIndex="-1" value="<%=data.role%>" data-val="<%=data.role%>" >
                                                                     <label for="sample2" class="pull-right margin-0">
                                                                         <i class="mdl-icon-toggle__label material-icons">keyboard_arrow_down</i>
                                                                     </label>
                                                                     <label for="sample2" class="mdl-textfield__label"><b>Với vai trò gì ?</b></label>
                                                                     
                                                                     <ul data-mdl-for="sample2" class="mdl-menu mdl-menu--bottom-left mdl-js-menu">
                                                                    
                                                                          <li class="mdl-menu__item" data-val="admin">
                                                                              <b>ADMIN</b>
                                                                          </li>
                                                                          <li class="mdl-menu__item" data-val="user">
                                                                                <b>Người dùng</b>
                                                                            </li>
                                     
                                     
                                                                     </ul>
                                                                 </div>
                                     
                                     
                                     
                                                             </div>
               
               
               
               
               
               
               
               
               
                                                       <div class="col-lg-12 p-t-100" style="margin-top: 40px;margin-left: 50px">
                                                            <button type="submit" class="btn btn-circle btn-info btn-lg m-b-10" id="btneditacc">
                                                                 <i class="fa fa-edit"></i> Sửa Tài Khoản Này</button>
                                                       </div>
               
                                                  </form>
                                             </div>
                                             
                                        </div>
                                   </div>
                                   
                                   
                                   

                              </div>

                         </div>
                    </div>
               </div>
          </div>


          <!-- add content here -->
     </div>
</div>
<!-- end page content -->
<!-- start chat sidebar -->

<!-- end chat sidebar -->
</div>
<!-- end page container -->
<!-- start footer -->
<% include layouts/footer %>
<script src="/assets/js/pageAccount.js"></script>