<% include layouts/header %>
<!-- end header -->
<!-- start page container -->
<div class="page-container">
    <!-- start sidebar menu -->
    <% include layouts/sidebar %>
    <!-- end sidebar menu -->
    <!-- start page content -->
    <div class="page-content-wrapper">
        <div class="page-content">
            <div class="page-bar">
                <div class="page-title-breadcrumb">
                    <div class=" pull-left">
                        <div class="page-title">
                            <b>
                                <%= page%></b>
                        </div>
                    </div>
                    <ol class="breadcrumb page-breadcrumb pull-right">
                        <li><i class="fa fa-home"></i>&nbsp;<a class="parent-item" href="/">Dashboard</a>&nbsp;<i class="fa fa-angle-right"></i>
                        </li>
                        <li><a class="parent-item" href="/admin/allcategories">Xem Thể Loại</a>&nbsp;<i class="fa fa-angle-right"></i>
                        </li>
                        <li class="active">
                            <%= page%>
                        </li>
                    </ol>
                </div>
            </div>

            <!-- add content here -->

            <div class="loader loader-default" id="load"></div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="card card-topline-aqua full-wight">
                        <div class="card-head">
                            <header>Sửa Thể Loại</header>
                        </div>
                        <div class="card-body">

                            <form enctype="multipart/form-data" method="POST" role="form" id="editform">
                                <div class="col-lg-12 p-t-20" style="margin-top: 40px;margin-left: 50px">
                                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-width">
                                        <input class="mdl-textfield__input" type="text" id="text4" name="theloai" value="<%= data.nameTheLoai %>">
                                        <label class="mdl-textfield__label" for="text4"><b>Nhập Tên Thể Loại</b></label>

                                    </div>

                                </div>

                                <div class="col-lg-12 p-t-25" style="margin-top: 40px;margin-left: 50px">
                                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label txt-width">
                                        <input class="mdl-textfield__input" type="text" id="text4" name="mota" value="<%= data.mota%>">
                                        <label class="mdl-textfield__label" for="text4"><b>Mô Tả</b></label>

                                    </div>

                                </div>
                                <div class="col-lg-12 margin-top-20" style="margin-top: 40px;margin-left: 50px">
                                    <label><b>Thuộc Thể Loại không ?</b></label>
                                    <label class="mdl-switch mdl-js-switch mdl-js-ripple-effect" for="switch-8">
                                        <input type="checkbox" id="switch-8" class="mdl-switch__input" <% if(data.subLevel == 1 && data.hasSub ==1){ %> disabled <%}else{ %>unchecked<%}%>>
                                    </label>
                                </div>
                                <div class="col-lg-12 margin-top-20" id="subtheloai" style="display: none ;margin-top: 40px;margin-left: 50px">
                                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label getmdl-select getmdl-select__fix-height select-width">
                                        <input class="mdl-textfield__input" type="text" id="sample2" name="theloaicha"
                                            readonly tabIndex="-1" >
                                        <label for="sample2" class="pull-right margin-0">
                                            <i class="mdl-icon-toggle__label material-icons">keyboard_arrow_down</i>
                                        </label>
                                        <label for="sample2" class="mdl-textfield__label"><b>Thuộc thể loại nào ?</b></label>

                                        <ul data-mdl-for="sample2" class="mdl-menu mdl-menu--bottom-left mdl-js-menu">
                                            <% if( dataCate) {
                                                dataCate.forEach(currentItem => {
                                                     %>
                                            <li class="mdl-menu__item" data-val="<%= currentItem._id%>">
                                                <b>
                                                    <%= currentItem.nameTheLoai%></b>
                                            </li>
                                            <% });
                                    
                                       }%>





                                        </ul>
                                    </div>



                                </div>

                                <input type="hidden" id="idcuaTheLoai" name="" class="form-control" value="<%= data.id %>">
                                <div class="col-lg-12 p-t-100" style="margin-top: 40px;margin-left: 50px">
                                    <button type="submit" class="btn btn-circle btn-info btn-lg m-b-10" id="btneditcate">
                                        <i class="fa fa-edit"></i> Sửa Thể Loại</button>
                                </div>

                            </form>

                        </div>

                    </div>
                </div>
            </div>
        </div>


        <!-- add content here -->
    </div>
</div>
<!-- end page content -->
<!-- start chat sidebar -->

<!-- end chat sidebar -->
</div>
<!-- end page container -->
<!-- start footer -->
<% include layouts/footer %>
<script src="/assets/js/pageCategori.js"></script>